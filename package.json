    "@typescript-eslint/parser": "^6.13.2",
    "@webgpu/types": "^0.1.40",
    "assemblyscript": "^0.27.22",
    "eslint": "^8.55.0",
    "stylelint": "^16.0.1",
    "stylelint-config-standard": "^35.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.7",
    "vite-plugin-glsl": "^1.2.1",
    "vite-plugin-solid": "^2.8.0"
  },
  "engines": {
    "node": ">= 18.12.1",
    "pnpm": ">= 8.11.0"
