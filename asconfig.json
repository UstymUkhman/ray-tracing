{
  "entries": [
    "assembly/index.ts"
  ],

  "options": {
    "sourceMap": true,
    "bindings": "esm"
  },

  "targets": {
    "debug": {
      "textFile": "build/debug.wat",
      "outFile": "build/debug.wasm",
      "debug": true
    },

    "release": {
      "textFile": "build/release.wat",
      "outFile": "build/release.wasm",
      "runtime": "stub",
      "optimizeLevel": 3,
      "converge": true,
      "noAssert": true,
      "optimize": true,
      "shrinkLevel": 0
    }
  }
}
